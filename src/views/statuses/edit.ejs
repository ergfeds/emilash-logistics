<% layout('layouts/admin') %>
<h1 class="h4">Edit Status</h1>
<form method="post" action="/admin/statuses/<%= status.id %>?_method=PUT" class="row g-3">
	<div class="col-md-4">
		<label class="form-label">Name</label>
		<input name="name" class="form-control" required value="<%= status.name %>">
	</div>
	<div class="col-md-4">
		<label class="form-label">Color</label>
		<input name="color" class="form-control" required value="<%= status.color %>">
	</div>
	<div class="col-md-4">
		<label class="form-label">Position</label>
		<input type="number" name="position" class="form-control" required value="<%= status.position %>">
	</div>
	<div class="col-12">
		<div class="form-check">
			<input class="form-check-input" type="checkbox" name="is_terminal" value="1" id="is_terminal" <%= status.is_terminal ? 'checked' : '' %>>
			<label class="form-check-label" for="is_terminal">Terminal status</label>
		</div>
	</div>
	<div class="col-12">
		<button class="btn btn-primary">Save Changes</button>
		<a href="/admin/statuses" class="btn btn-link">Cancel</a>
	</div>
</form>
