    <!-- Premium Navigation + Map Script (Mapbox) -->
    <script>
        // Mobile menu toggle
        function toggleMobileMenu() {
            const mobileMenu = document.getElementById('mobileMenu');
            const mobileBtn = document.getElementById('mobileMenuBtn');
            
            if (mobileMenu.style.display === 'none' || !mobileMenu.style.display) {
                mobileMenu.style.display = 'block';
                mobileBtn.innerHTML = '<i class="bi bi-x-lg"></i>';
            } else {
                mobileMenu.style.display = 'none';
                mobileBtn.innerHTML = '<i class="bi bi-list"></i>';
            }
        }

        // Active link highlighting
        const currentPath = window.location.pathname;
        document.querySelectorAll('.nav-link').forEach(link => {
            if (link.getAttribute('href') === currentPath) {
                link.style.color = '#1e3a8a';
                link.style.fontWeight = '600';
                
                // Add underline effect
                const underline = document.createElement('div');
                underline.style.position = 'absolute';
                underline.style.bottom = '0';
                underline.style.left = '0';
                underline.style.width = '100%';
                underline.style.height = '2px';
                underline.style.background = 'linear-gradient(90deg, #1e3a8a, #3b82f6)';
                link.style.position = 'relative';
                link.appendChild(underline);
            }
            
            // Hover effects
            link.addEventListener('mouseenter', function() {
                if (this.getAttribute('href') !== currentPath) {
                    this.style.color = '#1e3a8a';
                }
            });
            
            link.addEventListener('mouseleave', function() {
                if (this.getAttribute('href') !== currentPath) {
                    this.style.color = '#475569';
                }
            });
        });

        // Navbar scroll effect
        window.addEventListener('scroll', () => {
            const navbar = document.getElementById('navbar');
            if (window.scrollY > 50) {
                navbar.style.boxShadow = '0 10px 30px rgba(0, 0, 0, 0.1)';
                navbar.style.background = 'rgba(255, 255, 255, 1)';
            } else {
                navbar.style.boxShadow = 'none';
                navbar.style.background = 'rgba(255, 255, 255, 0.98)';
            }
        });

        // Responsive menu
        function checkScreenSize() {
            const desktopMenu = document.getElementById('desktopMenu');
            const mobileBtn = document.getElementById('mobileMenuBtn');
            
            if (window.innerWidth <= 768) {
                desktopMenu.style.display = 'none';
                mobileBtn.style.display = 'block';
            } else {
                desktopMenu.style.display = 'flex';
                mobileBtn.style.display = 'none';
                document.getElementById('mobileMenu').style.display = 'none';
            }
        }
        
        checkScreenSize();
        window.addEventListener('resize', checkScreenSize);

        // Add padding to main content for fixed navbar (safe)
        try {
            const mainEl = document.querySelector('.main-content');
            if (mainEl) {
                mainEl.style.paddingTop = '80px';
            } else {
                // fallback so content isn't hidden under navbar
                document.body.style.paddingTop = '70px';
            }
        } catch (_) {}

        // Initialize Mapbox map if placeholder exists
        try {
            const mapContainer = document.getElementById('coverageMap');
            if (mapContainer && window.mapboxgl) {
                const token = window.MAPBOX_TOKEN || "<%= (typeof appSettings !== 'undefined' && appSettings && appSettings.MAPBOX_TOKEN) ? appSettings.MAPBOX_TOKEN : '' %>";
                if (!token) {
                    console.warn('Mapbox token missing. Set MAPBOX_TOKEN in settings.');
                } else {
                    mapboxgl.accessToken = token;
                    const map = new mapboxgl.Map({
                        container: 'coverageMap',
                        style: 'mapbox://styles/mapbox/light-v11',
                        center: [0, 20],
                        zoom: 1.5,
                        attributionControl: false
                    });

                    map.addControl(new mapboxgl.NavigationControl({ visualizePitch: true }), 'bottom-right');

                    const hubs = [
                        // Americas
                        { name: 'New York Hub', lnglat: [-74.0060, 40.7128] },
                        { name: 'Los Angeles', lnglat: [-118.2437, 34.0522] },
                        { name: 'Miami', lnglat: [-80.1918, 25.7617] },
                        { name: 'Mexico City', lnglat: [-99.1332, 19.4326] },
                        { name: 'São Paulo', lnglat: [-46.6333, -23.5505] },
                        { name: 'Buenos Aires', lnglat: [-58.3816, -34.6037] },
                        { name: 'Panama City', lnglat: [-79.5197, 8.9824] },

                        // Europe
                        { name: 'London Hub', lnglat: [-0.1278, 51.5074] },
                        { name: 'Paris', lnglat: [2.3522, 48.8566] },
                        { name: 'Amsterdam', lnglat: [4.9041, 52.3676] },
                        { name: 'Frankfurt', lnglat: [8.6821, 50.1109] },
                        { name: 'Madrid', lnglat: [-3.7038, 40.4168] },
                        { name: 'Istanbul', lnglat: [28.9784, 41.0082] },

                        // Middle East & Africa
                        { name: 'Dubai Hub', lnglat: [55.2708, 25.2048] },
                        { name: 'Doha', lnglat: [51.5310, 25.2854] },
                        { name: 'Riyadh', lnglat: [46.6753, 24.7136] },
                        { name: 'Lagos Hub', lnglat: [3.3792, 6.5244] },
                        { name: 'Nairobi', lnglat: [36.8219, -1.2921] },
                        { name: 'Johannesburg', lnglat: [28.0473, -26.2041] },

                        // Asia
                        { name: 'Singapore Hub', lnglat: [103.8198, 1.3521] },
                        { name: 'Hong Kong', lnglat: [114.1694, 22.3193] },
                        { name: 'Shanghai', lnglat: [121.4737, 31.2304] },
                        { name: 'Tokyo', lnglat: [139.6917, 35.6895] },
                        { name: 'Mumbai', lnglat: [72.8777, 19.0760] },
                        { name: 'Bangkok', lnglat: [100.5018, 13.7563] },

                        // Oceania
                        { name: 'Sydney', lnglat: [151.2093, -33.8688] },
                        { name: 'Auckland', lnglat: [174.7633, -36.8485] }
                    ];

                    hubs.forEach(h => {
                        const el = document.createElement('div');
                        el.style.width = '12px';
                        el.style.height = '12px';
                        el.style.borderRadius = '50%';
                        el.style.background = '#2563eb';
                        el.style.border = '2px solid #1e40af';
                        el.style.boxShadow = '0 0 0 2px rgba(37,99,235,0.15)';
                        new mapboxgl.Marker(el).setLngLat(h.lnglat).setPopup(new mapboxgl.Popup({ offset: 12 }).setHTML(`<strong>${h.name}</strong>`)).addTo(map);
                    });

                    // Build hub lookup by name
                    const hubByName = hubs.reduce((acc, h) => { acc[h.name] = h.lnglat; return acc; }, {});

                    // Network pairs to visualize routes between hubs
                    const routePairs = [
                        // Transatlantic & core
                        ['New York Hub', 'London Hub'],
                        ['London Hub', 'Paris'],
                        ['Paris', 'Frankfurt'],
                        ['Frankfurt', 'Amsterdam'],
                        ['London Hub', 'Madrid'],

                        // Europe → Middle East / Africa
                        ['London Hub', 'Dubai Hub'],
                        ['Dubai Hub', 'Doha'],
                        ['Doha', 'Riyadh'],
                        ['London Hub', 'Lagos Hub'],
                        ['Lagos Hub', 'Nairobi'],
                        ['Nairobi', 'Johannesburg'],

                        // Middle East → Asia
                        ['Dubai Hub', 'Singapore Hub'],
                        ['Singapore Hub', 'Hong Kong'],
                        ['Hong Kong', 'Shanghai'],
                        ['Shanghai', 'Tokyo'],
                        ['Dubai Hub', 'Mumbai'],
                        ['Mumbai', 'Bangkok'],

                        // Transpacific & Americas
                        ['Tokyo', 'Los Angeles'],
                        ['Los Angeles', 'Miami'],
                        ['Miami', 'Mexico City'],
                        ['Miami', 'Panama City'],
                        ['Panama City', 'São Paulo'],
                        ['São Paulo', 'Buenos Aires'],

                        // Asia / Oceania
                        ['Singapore Hub', 'Sydney'],
                        ['Sydney', 'Auckland'],
                        ['Auckland', 'Singapore Hub']
                    ];

                    const palette = ['#22c55e', '#3b82f6', '#ef4444', '#f59e0b', '#8b5cf6', '#06b6d4'];
                    const routeFeatures = routePairs
                        .filter(([a,b]) => hubByName[a] && hubByName[b])
                        .map((pair, i) => ({
                            type: 'Feature',
                            properties: { id: 'route-' + i, color: palette[i % palette.length] },
                            geometry: { type: 'LineString', coordinates: [ hubByName[pair[0]], hubByName[pair[1]] ] }
                        }));

                    map.on('load', () => {
                        map.addSource('routes', { type: 'geojson', data: { type: 'FeatureCollection', features: routeFeatures } });
                        // Solid underlay (for strong color)
                        map.addLayer({
                            id: 'routes-solid',
                            type: 'line',
                            source: 'routes',
                            layout: {
                                'line-join': 'round',
                                'line-cap': 'round'
                            },
                            paint: {
                                'line-color': ['get', 'color'],
                                'line-width': 3,
                                'line-opacity': 0.9
                            }
                        });

                        // Dashed overlay (visible dashes)
                        map.addLayer({
                            id: 'routes-dashed',
                            type: 'line',
                            source: 'routes',
                            layout: {
                                'line-join': 'round',
                                'line-cap': 'round'
                            },
                            paint: {
                                'line-color': ['get', 'color'],
                                'line-width': 2,
                                'line-opacity': 1,
                                'line-dasharray': [2, 2]
                            }
                        });
                    });
                }
            }
        } catch (e) {
            console.warn('Mapbox init skipped:', e);
        }
    </script>
