<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Admin Login Â· <%= companyName %></title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
	<style>body{min-height:100vh;display:grid;place-items:center;background:#f6f7fb}</style>
</head>
<body>
	<div class="card shadow-sm" style="max-width:420px;width:100%">
		<div class="card-body p-4">
			<h1 class="h4 mb-3 text-center">Sign in</h1>
			<% if (flashError && flashError.length) { %>
				<div class="alert alert-danger"><%= flashError.join('<br>') %></div>
			<% } %>
			<form method="post" action="/admin/login">
				<div class="mb-3">
					<label class="form-label">Email</label>
					<input type="email" name="email" class="form-control" required>
				</div>
				<div class="mb-3">
					<label class="form-label">Password</label>
					<input type="password" name="password" class="form-control" required>
				</div>
				<button class="btn btn-primary w-100">Login</button>
			</form>
		</div>
	</div>
</body>
</html>
