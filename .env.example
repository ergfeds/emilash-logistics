# Production Environment Configuration
# Copy this file to .env and update with your production values

# Server Configuration
PORT=${PORT:-3000}
SESSION_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_IN_PRODUCTION
NODE_ENV=production

# Database Configuration - UPDATE THESE FOR YOUR PRODUCTION DATABASE
DB_HOST=your_production_db_host
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_db_name

# Migration Settings
MIGRATE_ON_START=1

# Company Information - UPDATE WITH YOUR COMPANY DETAILS
COMPANY_NAME=Emilash Logistics
COMPANY_EMAIL=support@yourdomain.com
COMPANY_PHONE=+1-555-YOUR-PHONE
COMPANY_ADDRESS=Your Company Address
COMPANY_WEBSITE=https://yourdomain.com
TIMEZONE=UTC
SITE_BASE_URL=https://yourdomain.com

# SMTP Configuration - REQUIRED FOR EMAIL NOTIFICATIONS
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
SMTP_FROM="Your Company Name" <no-reply@yourdomain.com>
SMTP_SECURE=false

# Security Settings
SECURE_COOKIES=true
TRUST_PROXY=true

# Logging
LOG_LEVEL=info

